@model Resume.Domain.Models.Entities.MySkills.MySkill

<div class="content-wrapper" style="min-height: 265.6px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">حذف مهارت</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/AdminPanel">داشبورد ادمین</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">حذف اطلاعات  مهارت ها</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="DeleteMySkill" asp-area="AdminPanel" asp-controller="MySkills" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Id</label>
                                    <input type="text" readonly class="form-control" id="exampleInputEmail1" asp-for="Id">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">عنوان مهارت</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="SkillTitle" placeholder="عنوان مدرک تحصیلی را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">میزان توانایی</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Persentage" placeholder="بازه ی زمانی دریافت مدرک را وارد کنید">
                                </div>
                              
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-danger">حذف</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

</div>