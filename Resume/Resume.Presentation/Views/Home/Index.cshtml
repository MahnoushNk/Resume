

@{
	ViewData["Title"] = "Home Page";

	var educations = ViewBag.Educations as ;

	var experiences = ViewBag.Expriences as ;

	var mySkills = ViewBag.MySkills as ;

}   
<!-- Content -->
<div class="content" data-simplebar>
	<div class="section mt-0">
		<h1 class="title title--h1 title__separate">Resume</h1>
	</div>

	<!-- Experience -->
	<div class="section">
		<h2 class="title title--h2"><img class="title-icon" src="/SiteSample/assets/icons/icon-education.svg" alt="" /> Education</h2>
		<div class="timeline">

			@foreach(var education in educations )
			{
				<!-- Item -->
				<article class="timeline__item">
					<h5 class="title title--h3 timeline__title">
						@education.EducationTitle
						</h5>
					<span class="timeline__period">
						@education.EducationDuration
						</span>
					<p class="timeline__description">
						@education.Description
						</p>
				</article>
				
			}



			
	</div>

	<div class="section">
		<h2 class="title title--h2"><img class="title-icon" src="/SiteSample/assets/icons/icon-experience.svg" alt="" /> Experience</h2>
		<div class="timeline">
			
	
			@foreach(var experince in experiences )
			{
					<!-- Item -->
					<article class="timeline__item">
						<h5 class="title title--h3 timeline__title">
							@experince.ExprienceTitle
						</h5>
						<span class="timeline__period">
							@experince.ExprienceDuration
						</span>
						<p class="timeline__description">
							@experince.Description
						</p>
					</article>

	     	}

			
		</div>
	</div>

	<!-- Skills -->
	<div class="section">
		<h2 class="title title--h2">My Skills</h2>
		<div class="box-gray">

			@foreach(var mySkill in mySkills )
				{
					<!-- Progress -->
					<div class="progress">
						<div class="progress-bar" role="progressbar" aria-valuenow="@mySkill.Persentage" aria-valuemin="0" aria-valuemax="100">
							<div class="progress-text"><span>
								@mySkill.SkillTitle
							</span><span>
								@mySkill.Persentage
							</span></div>
						</div>
						<div class="progress-text"><span>
							@mySkill.SkillTitle
						</span></div>
					</div>
					
			}

		</div>
	</div>
</div><!-- Content End -->